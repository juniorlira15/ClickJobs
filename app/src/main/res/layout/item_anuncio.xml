<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:elevation="4dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAnuncio"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />
        ...(your complex view here)...
    </com.facebook.shimmer.ShimmerFrameLayout>




    <TextView
        android:id="@+id/txtNomeProf"
        style="@style/fonte_padrao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="7dp"
        android:text="Carlos AntÃ´nio"
        android:textColor="@color/cinza_escuro"
        app:layout_constraintBottom_toTopOf="@+id/txtCategProf"
        app:layout_constraintStart_toEndOf="@+id/shimmer_view_container" />

    <TextView
        android:id="@+id/txtCategProf"
        style="@style/fonte_padrao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Carpinteiro"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shimmer_view_container"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtEndServ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="Major Prates - Montes Claros"
        android:textColor="@color/cinza_escuro"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtFaixaPrecoServ"
        style="@style/fonte_padrao"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginEnd="16dp"
        android:text="R$ 45,00 ~ R$ 100,00"
        android:textColor="@color/roxo_claro"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txtNomeProf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtNomeProf" />
</androidx.constraintlayout.widget.ConstraintLayout>