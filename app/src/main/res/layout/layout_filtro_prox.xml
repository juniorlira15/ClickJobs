<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:theme="@style/Theme.Teste.Fullscreen">

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Raio de busca"
        android:textColor="@color/branco"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@+id/seekBarProx"
        app:layout_constraintStart_toStartOf="@+id/seekBarProx" />

    <TextView
        android:id="@+id/txtFiltroDistancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:onClick="onClick"
        android:textColor="@color/branco"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/seekBarProx"
        app:layout_constraintEnd_toEndOf="@+id/seekBarProx" />

    <SeekBar
        android:id="@+id/seekBarProx"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:progressBackgroundTint="@color/branco"
        android:progressTint="@color/amarelo"
        android:thumbTint="@color/amarelo"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>