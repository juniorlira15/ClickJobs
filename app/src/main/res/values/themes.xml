<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClickJobs" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/roxo_medio</item>
        <item name="colorPrimaryDark">@color/roxo</item>
        <item name="colorAccent">@color/roxo_claro</item>
        <!-- Customize your theme here. -->

        <item name="colorPrimaryVariant">@color/roxo</item>
        <item name="colorOnPrimary">@color/branco</item>
        <item name="colorSecondary">@color/roxo_claro</item>
        <item name="colorSecondaryVariant">@color/cinza_muito_claro</item>
        <item name="colorOnSecondary">@color/cinza_muito_claro</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">#212121</item>
        <item name="textInputStyle">@style/Thema.TextInputLayout</item>

    </style>

    <style name="Theme.ClickJobs.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--         Primary brand color. -->
        <item name="colorPrimary">@color/branco</item>
        <item name="colorPrimaryDark">@color/roxo</item>
        <item name="colorAccent">@color/roxo_claro</item>
        <item name="android:statusBarColor">@color/branco</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        Customize your theme here.
    </style>




    <style name="Theme.Teste.Fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/roxo_medio</item>
        <item name="colorPrimaryDark">@color/roxo</item>
        <item name="colorAccent">@color/roxo_claro</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/roxo_medio</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowBackground">@null</item>
        <item name="colorPrimaryVariant">@color/roxo</item>
        <item name="colorOnPrimary">@color/branco</item>
        <item name="colorSecondary">@color/roxo_claro</item>
        <item name="colorSecondaryVariant">@color/cinza_muito_claro</item>
        <item name="colorOnSecondary">@color/cinza_muito_claro</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">#212121</item>

        <!-- Secondary brand color. -->

    </style>

    <style name="Theme.TelaInteira" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/branco</item>
    </style>

    <style name="Thema.RecuperarSenha" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/roxo</item>
        <item name="colorControlNormal">@color/branco</item> <!--Cor da Setinha de Voltar-->
    </style>

    <style name="fonte_padrao">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/tamanho_menor</item>
        <item name="android:textColor">@color/cinza_medio</item>
    </style>

    <style name="fonte_btn" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/tamanho_btn</item>
        <!--        <item name="android:background">@color/roxo_medio</item>-->
        <item name="android:textColor">@color/branco</item>
        <item name="background">@drawable/bg_btn_login</item>

    </style>

    <style name="fonte_btn_google" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">@dimen/tamanho_btn</item>
        <!--        <item name="android:background">@color/roxo_medio</item>-->
        <item name="android:textColor">@color/cinza_escuro</item>
        <item name="background">@color/branco</item>
        <item name="backgroundTint">@color/branco</item>
        <item name="android:drawableStart">@drawable/icon_google</item>
    </style>

    <style name="fonte_btn_facebook" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">@dimen/tamanho_btn</item>
        <!--        <item name="android:background">@color/roxo_medio</item>-->
        <item name="android:textColor">@color/cinza_escuro</item>

        <item name="android:colorControlHighlight">@color/azul_facebook</item>

    </style>

    <style name="fonte_txt_click">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/tamanho_btn</item>
    </style>

    <style name="Thema.EditText" parent="Theme.Teste.Fullscreen">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/roxo_medio</item>
        <item name="hintTextColor">@color/cinza_medio</item>
        <item name="colorPrimaryVariant">@color/roxo_claro</item>
        <item name="colorControlNormal">@color/cinza_escuro</item>
        <item name="strokeColor">@color/roxo_claro</item>
        <item name="android:strokeColor">@color/roxo_claro</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="colorControlActivated">@color/roxo_claro</item>
        <item name="colorControlHighlight">@color/roxo_claro</item>
        <item name="colorBackgroundFloating">@color/roxo_claro</item>
        <item name="autoCompleteTextViewStyle">@color/roxo_claro</item>
        <item name="fontFamily">@font/nunito_regular</item>


    </style>

    <style name="Thema.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="boxBackgroundMode">outline</item>
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="boxBackgroundColor">@color/cinza_muito_claro</item>
        <item name="boxStrokeColor">@color/cinza_escuro</item>
        <item name="strokeWidth">1dp</item>
        <item name="hintTextColor">@color/roxo_medio</item>
        <item name="android:textColor">@color/cinza_medio</item>
        <item name="counterTextColor">@color/roxo_medio</item>

        <item name="errorTextColor">@color/roxo_medio</item>
        <item name="colorControlNormal">@color/cinza_escuro</item>
        <item name="android:textSize">@dimen/tamanho_menor</item>
        <item name="colorControlActivated">@color/roxo_medio</item>
        <item name="colorControlHighlight">@color/roxo_medio</item>
        <item name="colorBackgroundFloating">@color/roxo_medio</item>
        <item name="autoCompleteTextViewStyle">@color/roxo_medio</item>
        <item name="android:textColorHint">@color/cinza_medio</item>
        <item name="paddingStart">10dp</item>
        <item name="android:drawablePadding">10dp</item>

    </style>

    <style name="Theme.Fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/roxo_medio</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>